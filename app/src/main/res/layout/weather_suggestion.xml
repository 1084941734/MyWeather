<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#8000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="生活指数"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginRight="4dp"
                    android:id="@+id/imageView_ssd"
                    android:src="@mipmap/ssd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:textColor="#CDC9C9"
                    android:textSize="13sp"
                    android:id="@+id/textView_ssd"
                    android:layout_toRightOf="@id/imageView_ssd"
                    android:text="舒适度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text_ssd"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_toRightOf="@id/imageView_ssd"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/imageView_yd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/yd" />

                    <TextView
                        android:id="@+id/textView_yd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageView_yd"
                        android:text="运动指数"
                        android:textColor="#CDC9C9"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_yd"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/imageView_yd"
                        android:textColor="#fff" />
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/imageView_xc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/xc" />

                    <TextView
                        android:id="@+id/textView_xc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView_xc"
                        android:text="洗车指数"
                        android:textColor="#CDC9C9"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_xc"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/imageView_xc"
                        android:textColor="#fff" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_marginRight="4dp"
                        android:id="@+id/imageView_cy"
                        android:src="@mipmap/cy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:textColor="#CDC9C9"
                        android:textSize="13sp"
                        android:id="@+id/textView_cy"
                        android:layout_toRightOf="@id/imageView_cy"
                        android:text="穿衣指数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text_cy"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:layout_toRightOf="@id/imageView_cy"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/imageView_gm"
                        android:src="@mipmap/gm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#CDC9C9"
                        android:textSize="13sp"
                        android:id="@+id/textView_gm"
                        android:layout_toRightOf="@id/imageView_gm"
                        android:text="感冒指数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text_gm"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:layout_toRightOf="@id/imageView_gm"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/imageView_lx"
                        android:src="@mipmap/lx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#CDC9C9"
                        android:textSize="13sp"
                        android:id="@+id/textView_lx"
                        android:text="旅行指数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/imageView_lx" />
                    <TextView
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:layout_toRightOf="@id/imageView_lx"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_lx" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

 </LinearLayout>





    </android.support.v7.widget.CardView>
</LinearLayout>